{
  "manifest_version": 3,
  "name": "Prompt Navigator: Search & Jump",
  "version": "1.1.1",
  "description": "Instantly find, search, and jump to any prompt in your AI conversation history.",
  "permissions": ["scripting"],
  "host_permissions": [
    "https://gemini.google.com/*",
    "https://chat.openai.com/*",
    "https://chatgpt.com/*"
  ],
  "action": {
    "default_icon": {
      "16": "images/iconlight16.png",
      "48": "images/iconlight48.png",
      "128": "images/iconlight128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["images/*.png"],
      "matches": ["*://gemini.google.com/*", "*://chatgpt.com/*", "*://chat.openai.com/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "https://gemini.google.com/*",
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}